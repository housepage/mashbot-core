<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:cxf="http://cxf.apache.org/core"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
     http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
     http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
     http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
     http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<!-- Load CXF modules from cxf.jar -->
	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-extension-jaxrs-binding.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

	<!-- Enable message logging using the CXF logging feature -->
	<cxf:bus>
		<cxf:features>
			<cxf:logging />
		</cxf:features>
	</cxf:bus>
	
	<bean id="securityInterceptor" class="org.mashbot.server.auth.BasicAuthAuthorizationInterceptor">
		<property name="users">
			<map>
				<entry key="default" value="default"/>
			</map>
		</property>
	</bean>
	
	<util:list id="HandlerChain" value-type="org.mashbot.server.handlers.ChainableHandler">
		<bean class="org.mashbot.server.handlers.PluginMatchingHandler" />
		<bean class="org.mashbot.server.handlers.AuthenticationMatchingHandler" />
		<bean class="org.mashbot.server.handlers.RequiredDataVerificationHandler" />
		<bean class="org.mashbot.server.handlers.PluginCallingHandler" />
	</util:list>

	<!-- The service bean -->
	<bean id="mashbotService"
		class="org.mashbot.server.web.MashbotService">
		<constructor-arg><ref bean="HandlerChain" /></constructor-arg>
		<property name="pluginMan"><ref bean="pluginManager"/></property>
		<property name="authMan"><ref bean="authenticationManager"/></property>
	</bean>

	<bean id="authenticationService"
		class="org.mashbot.server.web.MashbotAuthenticationService">
		<property name="authman"><ref bean="authenticationManager"/></property>
	</bean>
	
	<bean id="authenticationManager"
		class="org.mashbot.server.auth.AuthenticationManager" scope="singleton" />
		
	<bean id="pluginManager"
		class="org.mashbot.server.plugins.PluginManager" scope="singleton">
		<property name="plugins" ref="plugins"/>	
	</bean>
	
	<util:map id="plugins" key-type="java.lang.String" value-type="java.util.Map">
				<entry key="status">
					<map key-type="java.lang.String" value-type="java.util.List">
						<entry key="push">
							<list value-type="org.mashbot.server.plugins.Plugin">
								<ref bean="twitter"/>
							</list>
						</entry>
						<!-- <entry key="pull"></entry>
						<entry key="update"></entry>
						<entry key="delete"></entry> -->
					</map>
				</entry>
				<entry key="blog">
					<map key-type="String" value-type="org.mashbot.server.plugins.Plugin">
						<entry key="push">
							<list value-type="org.mashbot.server.plugins.Plugin">
								<ref bean="tumblr"/>
							</list>
						</entry>
					</map>
				</entry>
				<entry key="picture">
					<map key-type="String" value-type="org.mashbot.server.plugins.Plugin">
						
					</map>
				</entry>
				<entry key="video">
					<map key-type="String" value-type="org.mashbot.server.plugins.Plugin">
						
					</map>
				</entry>
			</util:map>

	
	<bean name="twitter"  class="org.mashbot.server.plugins.TwitterPlugin" />
	<bean name="tumblr"  class="org.mashbot.server.plugins.TumblrPlugin" />
	
	
	<!-- <bean id="myPasswordCallback"
      		class="com.mycompany.webservice.ServerPasswordCallback"/> -->

	<!-- Service endpoint -->
	<!-- See http://incubator.apache.org/cxf/faq.html regarding CXF + Spring AOP -->
	<jaxrs:server id="jaxrsRestService" address="/rest/">
		<jaxrs:serviceBeans>
			<ref bean="authenticationService" />
			<ref bean="mashbotService" />
		</jaxrs:serviceBeans>
		<jaxrs:features>
			<cxf:logging/>	
		</jaxrs:features>
		<jaxrs:providers>
			<ref bean="jaxbProvider"/>
			<ref bean="jsonProvider" />
		</jaxrs:providers>
		
		<jaxrs:inInterceptors>
			<ref bean="securityInterceptor" />
		</jaxrs:inInterceptors>
	</jaxrs:server>
	
	<bean id="jaxbProvider" class="org.apache.cxf.jaxrs.provider.JAXBElementProvider" />
	<bean id="jsonProvider" class="org.apache.cxf.jaxrs.provider.JSONProvider" />
	
</beans>
